<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="adminhtml.customer.grid.columnSet">
            <block class="Magento\Backend\Block\Widget\Grid\Column" name="adminhtml.customer.grid.columnSet.vat_id" as="vat_id">
                <arguments>
                    <argument name="header" xsi:type="string" translate="true">VAT ID</argument>
                    <argument name="index" xsi:type="string">taxvat</argument>
                </arguments>
            </block>
            <block class="Magento\Backend\Block\Widget\Grid\Column" name="adminhtml.customer.grid.columnSet.company_name" as="company_name">
                <arguments>
                    <argument name="header" xsi:type="string" translate="true">Company name</argument>
                    <argument name="index" xsi:type="string">company_name</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
