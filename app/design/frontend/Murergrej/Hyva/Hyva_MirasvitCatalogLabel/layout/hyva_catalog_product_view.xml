<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="catalog_list_item"/>
    <body>
        <referenceBlock name="product.detail.page">
            <block class="Hyva\MirasvitCatalogLabel\Block\Label\Adapter"
                   name="product.view.media.labels"
                   as="product.labels"/>
        </referenceBlock>
        <referenceBlock name="product.view.media.image.label" remove="true" />
    </body>
</page>
